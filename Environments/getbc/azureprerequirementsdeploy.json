{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "skipStorageAccountCreation": {
            "type": "bool",
            "defaultValue": false
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Premium_LRS"
            ],
            "metadata": {
                "Description": "Select the preferred storage account type. Standard_LRS is HDD, Premium_LRS is SSD."
            }
        },
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "Description": "The name for the new or existing storage account where the license files will be stored"
            }
        },
        "storageContainerName": {
            "type": "string",
            "defaultValue": "hcs-container",
            "metadata": {
                "Description": "The name for the new container to be created in the storage account"
            }
        }
    },
    "variables": {
        "storageAccountType": "[parameters('storageAccountType')]",
        "storageAccountName": "[parameters('storageAccountName')]",
        "storageContainerName": "[parameters('storageContainerName')]",
        "skipStorageAccountCreation": "[parameters('skipStorageAccountCreation')]"
    },
    "resources": [
        {
            "apiVersion": "2021-09-01",
            "condition": "[not(variables('skipStorageAccountCreation'))]",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "sku": {
                "name": "[variables('storageAccountType')]",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "location": "[resourceGroup().location]",
            "properties": {
                "supportsHttpsTrafficOnly": true,
                "accessTier": "Hot"
            },
            "resources": [
                {
                    "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
                    "apiVersion": "2021-06-01",
                    "name": "[format('{0}/default/{1}', variables('storageAccountName'), variables('storageContainerName'))]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
                    ]
                }
            ]
        }
    ]
    ,
    "outputs": {
        "test": {
            "type": "string",
            "value": "This is just test"
        },
        "storageAccount": {
            "type": "object",
            "value": "[reference(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')))]"
        }
    }
}
